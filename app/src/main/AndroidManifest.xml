<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SHessYoach"
        tools:targetApi="31">
        <activity
            android:name=".activities.Login"
            android:exported="false" />
        <activity
            android:name=".activities.HistoryParty"
            android:exported="false" />
        <activity
            android:name=".activities.Quest"
            android:exported="false" />
        <activity
            android:name=".activities.MultyPlay"
            android:exported="false" />
        <activity
            android:name=".activities.GameHistory"
            android:exported="false" />
        <activity
            android:name=".activities.Settings"
            android:exported="false" />
        <activity
            android:name=".activities.SinglePlay"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>